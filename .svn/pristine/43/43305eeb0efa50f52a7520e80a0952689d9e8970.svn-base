<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
    	.header .left a.ico_back {
		    padding-right: 26px;
		}
		a:link, a:visited, a:hover {
		    color: #4C4C4C;
		    text-decoration: none;
		}
		li {
			list-style:none;
		}
		.header .left {
		    position: relative;
		    z-index: 5;
		    font-size: 16px;
		    color: #fff;
		    float: left;
		    text-align: center;
		    width: 30px;
		    height:30px;
		    top:4px !important;
		    left:32px !important;
		}
		.ico_back {
			display:inline-block;
			width:20px;
			height:20px;
		    background-image: url('http://www.7wanl.com/template/7wanl_wap_v1.1/image/touch/m-icon.png');
		    background-repeat: no-repeat;
		    background-size: 300px;
		    background-position: 0px -187px;
		    margin-left: 0px;
		}
		.user-info p{
			padding-top: 8px;
		}
    	#header{
			background-color:#fff;text-align: center;height:42px;line-height: 42px;margin-left:-25px;
		}
    </style>
</head>
<body>
<header id="header" class="header" style="border-bottom:1px solid rgb(195, 195, 195);">
    <div class="left"><a class="ico_back" onclick='leftClose()'></a></div>
    <div class="cent" style="margin-left:13px;">百度地图</div>
</header>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
	var bMap = null;
	
	apiready = function(){
	
		bMap = api.require('bMap');
		
		$api.fixIos7Bar( $api.dom('header') );
		
		api.startLocation({
	        accuracy:'10m',
	        autoStop: true
        },function(ret,err){
        	if( ret ){
		        var lng = ret.longitude;
		        var lat = ret.latitude;
		        
    			bmapOpen(lng,lat)
		    }else{
		         alert("发生错误，请重新加载！");
		    }
        });

	};
	
	function bmapOpen(lng,lat){
		bMap.open({
			rect : {
				x : 0,
				y : 0,
				w : api.winWidth,
				h : api.winHeight
			},
			center : {
				lon : lng,
				lat : lat
			},
			zoomLevel : 10,
			showUserLocation : true,
			fixedOn : 'bmap',
			fixed : true
		}, function(ret) {
			if (ret.status) {
				api.alert({
					msg : 'open方法执行成功！'
				}, function(ret, err) {
				});
			}
		});
	}
	
	//关闭页面
	function leftClose(){
    	api.closeWin();
    }
</script>
</html>