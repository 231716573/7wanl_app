<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
	apiready = function(){
	
	    var getname = $api.getStorage("username");
	    var getPwd  = $api.getStorage("userpassword"); 
	
        if((("" != getname)||(null != getname)||(undefined != getname)) && (("" != getPwd)||(null != getPwd)||(undefined != getPwd))){  
        
            //lacoste  已经保存 登陆信息 直接登陆  
            $api.val($api.dom("#username"), getname);
            $api.val($api.dom("#userpassword"), getPwd);
        }  

	};

	var newurl ="";
	
//	'+userpassword+'  '+userpassword+'
	function loginIn(){
	
		var username = document.getElementById("username").value;
		var userpassword = document.getElementById("userpassword").value;
		
		var person = '{"account":"'+username+'","password":"'+userpassword+'"}';
	
		api.ajax({
	        url:'http://test.7wanl.com/7wanlsoa/app/ucenter/login.json',
	        method:'post',
	        data: {
		        body:person
		    },
		    timeout:10,
		    cache: true
        },function(ret,err){
        	if (ret) {
        		 if(ret.code == 0){
					
		         	// 保存到localStorage
		         	
		         	$api.setStorage("username",document.getElementById("username").value);
		         	$api.setStorage("userpassword",document.getElementById("userpassword").value);
		         	$api.setStorage("userid",ret.obj.uid);
		         	$api.setStorage("useraccessToken",ret.obj.accessToken);

		         	newurl = "uid=" + ret.obj.uid + "&accessToken=" + ret.obj.accessToken;
		         	
		         	loginframe31(newurl);
		         	
		         	alert(ret.msg);
		         	
		         }else{
		         	
		         	alert(ret.msg);
		         	
		         }
		    } else {
		         alert(JSON.stringify(err));
		    }
        });
	}
	
	
	function loginframe31(url){

        api.openWin({
	        name: 'index',
	        url: '../index.html?'+url
	        
        });
	}
	
	
	
//	忘记密码
	function loginlostpw(){

        api.openWin({
	        name: 'lostpw',
	        url: 'lostpw.html',
	      
        });
	}
	
	
	function leftClose(){
    	api.closeWin();
    }
	
//	注册
	function register(){
		api.openWin({
	        name: 'register',
	        url: 'register.html'
        });
	}
	
	
	
	
</script>
