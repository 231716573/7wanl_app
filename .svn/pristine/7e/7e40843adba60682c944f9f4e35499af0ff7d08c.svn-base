		    extra:{
		        threshold:0            //设置距离底部多少距离时触发，默认值为0，数字类型
		    }
		},function(ret,err){
		    getlistmore('readmore','http://test.7wanl.com/7wanlsoa/app/location/getActivityList.json?cityId='+$api.getStorage('cityid')+'&lng='+lng+'&lat='+lat+'&pageSize=5&pageNumber=');
		});
		

		//下拉刷新
